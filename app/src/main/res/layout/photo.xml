<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/skyphoto"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:src="@drawable/danbi_1"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comment"
        />

    <EditText
        android:id="@+id/comment"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="코멘트 달기"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/skyphoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit_but"
        />

    <Button
        android:id="@+id/submit_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundsquare"
        android:text="제출하기"
        android:gravity="center"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@+id/comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"
        />



</android.support.constraint.ConstraintLayout>
