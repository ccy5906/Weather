<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:src="@drawable/back"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/diary_photo"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/danbi_1"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n월 n일"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/diary_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diary_comment"
        />

    <TextView
        android:id="@+id/diary_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMMENT"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/diary_photo"
        app:layout_constraintLeft_toRightOf="@+id/diary_date"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/diary_write"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="일기쓰기"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/diary_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <Button
        android:id="@+id/diary_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundsquare"
        android:text="저장하기"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="28dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
