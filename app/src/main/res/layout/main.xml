<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="350dp"
        android:layout_height="460dp"
        android:src="@drawable/back"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        />

    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/danbi_1"
        android:layout_marginTop="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n월 n일"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_comment"
        />

    <TextView
        android:id="@+id/main_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMMENT"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_photo"
        app:layout_constraintLeft_toRightOf="@+id/main_date"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/main_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundsquare"
        android:text="일기쓰기"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintRight_toLeftOf="@+id/main_takepic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/main_takepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundsquare"
        android:text="사진찍기"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_write"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
